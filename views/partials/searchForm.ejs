<form action="/results" method="GET" class="position-relative w-100">
  <input id="search" type="search" class="form-control rounded-pill pe-5" placeholder="<%= placeholder || 'Search' %>" aria-label="Search" name="search_query" required style="padding-right: 45px;" />
  <button type="submit" class="btn position-absolute top-50 end-0 translate-middle-y bg-transparent text-muted me-2 shadow-none" style="padding: 0.25rem 0.5rem;" aria-label="Submit search">
    <i class="fas fa-search"></i>
  </button>
</form>