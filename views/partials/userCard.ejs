<div class="card bg-body-tertiary p-3 mb-3 shadow-sm">
  <div class="d-flex align-items-center">

    <div class="me-3 flex-shrink-0">
      <%- include('./avatar', { 
        user, 
        dropdown: false, 
        width: 48, 
        height: 48,
        className: "shadow-sm border border-primary border-2 p-1" 
      }) %>
    </div>

    <div class="flex-grow-1">
      <h5 class="card-title fs-6 mb-0 fw-semibold text-truncate" id="post-author">
        <%= user.firstname %> <%= user.lastname %>
      </h5>
      <p class="card-subtitle text-muted small mb-0 text-truncate">
        @<%= user.username %>
      </p>
    </div>

