<% layout('layout/main') %>

<%- include('../partials/profileCard', { posts, totalDocuments }) %>

<% if (user?._id && viewUser?._id && user._id.toString() === viewUser._id.toString()) { %>
<%- include('../partials/postInput', { placeholder:"What's on your mind", dataAction: 'create-post', dataTitle: 'Create Post', dataId: 123 }) %>
<% } %>

<%- include('../partials/sectionLabel', { icon: 'fa-solid fa-rss', title: 'Other posts' }) %>

<%- include('../partials/postsLoop', { posts }); %>

<% if (posts.length !== 0) { %>
<%- include('../partials/pagination', { 
    currentPage, 
    totalPages, 
    path: `home/${viewUser?._id}/profile` 
}) %>
<% } %>